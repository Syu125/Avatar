<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".WelcomeScreen">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navbar"
        android:background="@drawable/menu_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/menu_bg" />

    <TextView
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:paddingTop="18dp"
        android:text="AVATAR"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/today"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/navbar"
        android:background="#00000000"
        android:gravity="start"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:text="Today"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/fire"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/today"
        android:background="#00000000"
        android:gravity="start"
        android:paddingLeft="72dp"
        android:paddingTop="12dp"
        android:text=" Fire"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/earth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/fire"
        android:background="#00000000"
        android:gravity="start"
        android:paddingLeft="72dp"
        android:paddingTop="12dp"
        android:text="Earth"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <Button
        android:id="@+id/air"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/earth"
        android:background="#00000000"
        android:gravity="start"
        android:paddingLeft="72dp"
        android:paddingTop="12dp"
        android:text="Air"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <Button
        android:id="@+id/water"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/air"
        android:background="#00000000"
        android:gravity="start"
        android:paddingLeft="72dp"
        android:paddingTop="12dp"
        android:text="Water"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/menuBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignStart="@id/navbar"
        android:layout_alignLeft="@id/navbar"
        android:layout_alignTop="@id/navbar"
        android:layout_alignBottom="@id/navbar"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:src="@drawable/menu_lines" />

    <ImageView
        android:id="@+id/fireIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@id/fire"
        android:layout_alignLeft="@id/fire"
        android:layout_alignTop="@id/fire"
        android:layout_alignBottom="@id/fire"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        android:src="@drawable/fire"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/earthIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@id/earth"
        android:layout_alignLeft="@id/earth"
        android:layout_alignTop="@id/earth"
        android:layout_alignBottom="@id/earth"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        android:src="@drawable/earth"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/airIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@id/air"
        android:layout_alignLeft="@id/air"
        android:layout_alignTop="@id/air"
        android:layout_alignBottom="@id/air"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        android:src="@drawable/air"
        android:tint="@color/white" />

    <ImageView
        android:id="@+id/waterIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignStart="@id/water"
        android:layout_alignLeft="@id/water"
        android:layout_alignTop="@id/water"
        android:layout_alignBottom="@id/water"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        android:src="@drawable/water"
        android:tint="@color/white" />

</RelativeLayout>